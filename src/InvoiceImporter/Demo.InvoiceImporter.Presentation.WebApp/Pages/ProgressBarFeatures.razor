@page "/progressbarfeatures"
@using Syncfusion.Blazor.ProgressBar
<h2>ProgressBar</h2>
<br/>
<SfProgressBar Type="ProgressType.Circular" Value="30" Width="90%" Height="200px" TrackThickness="10" ProgressThickness="10" ProgressColor="#ff8c45" Minimum="0" Maximum="100">
        <ProgressBarAnimation Enable="true" Duration="2000" Delay="0"></ProgressBarAnimation>
        <ProgressBarAnnotations>
            <ProgressBarAnnotation AnnotationAngle="0" AnnotationRadius="10%" Content="<div id='point1' style='font-size:35px;font-weight:bold;color:#ff8c45;fill:#ff8c45'><span>30%</span></div>" />
        </ProgressBarAnnotations>
    </SfProgressBar> 
<br/>
<div>
  <h3>Selected Features:</h3>
    <ul class="ulstyle">
      <li class="list"> Container Type - Circular</li>
<li class="list"> Theme - Material</li>
    </ul>
</div>
<br/>
